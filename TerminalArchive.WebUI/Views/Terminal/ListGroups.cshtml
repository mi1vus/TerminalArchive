@model IEnumerable<TerminalArchive.Domain.Models.Group>

@{
    ViewBag.Title = "Группы";
}

<h2>Группы</h2>

<p>
    @Html.ActionLink("Новая группа", "AddOrEditGroup",
        new
        {
            @class = "btn "
            + ("" == ViewBag.CurrentController ? " btn-primary" : "")
        })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>Редактирование</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "AddOrEditGroup", new { id=item.Id },
        new
        {
            @class = "btn btn-success"
            + ("" == ViewBag.CurrentController ? " btn-primary" : "")
        })
        </td>
    </tr>
}

</table>
